<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_picfragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picture"
        android:textSize="30dp"
        />

    <ImageView
        android:id="@+id/iv_selfie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_picfragment"/>

    <Button
        android:id="@+id/btn_selfiecamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make selfie"/>

    <ImageView
        android:id="@+id/iv_drivinglicence"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_picfragment"/>

    <Button
        android:id="@+id/btn_drivingliccamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make selfie"/>


</RelativeLayout>