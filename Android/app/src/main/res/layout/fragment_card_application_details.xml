<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="383dp"
            android:layout_height="573dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.611"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:id="@+id/tv_cardappformid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/application" />

            <TextView
                android:id="@+id/tv_dateofsubmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cardappformid"
                android:text="Date of submission"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_type"
                android:layout_below="@+id/tv_cardappformid"
                android:text="Status"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="121dp"
                android:text="Type"
                android:textColor="@color/md_blue_900" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp"
                android:text="Driver personal information"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="75dp"
                android:text="First Name"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="101dp"
                android:text="Last Name"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_personalnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="128dp"
                android:text="Personal number"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_dateofbirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/tv_personalnumber"
                android:layout_marginEnd="93dp"
                android:text="Date of birth"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="156dp"
                android:text="Address"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />


            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_personalnumber"
                android:layout_alignParentTop="true"
                android:layout_marginTop="205dp"
                android:text="Phone number"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tv_phone"
                android:layout_marginTop="247dp"
                android:text="E-mail"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/iv_selfie"
                android:layout_alignTop="@+id/tv_phone"
                android:text="Selfie" />

            <ImageView
                android:id="@+id/iv_selfie"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/tv_phone"
                android:layout_toStartOf="@+id/tv_status" />

            <TextView
                android:id="@+id/tv_drivinglicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_selfie"
                android:text="Driving license" />

            <ImageView
                android:id="@+id/iv_drivingpic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_drivinglicense" />


            <TextView
                android:id="@+id/tv_driving_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_driving_country"
                android:layout_toEndOf="@+id/tv_personalnumber"
                android:text="Driving license number"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_driving_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_drivinglicense"
                android:layout_toEndOf="@+id/tv_personalnumber"
                android:text="Driving license country"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_drivingpic"
                android:text="Loss/ Theft info" />

            <TextView
                android:id="@+id/tv_placeofevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_loss"
                android:text="Place of event"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_dateofevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_placeofevent"
                android:text="Date of event"
                android:textColor="@color/md_blue_900" />


            <TextView
                android:id="@+id/tv_oldcardinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dateofevent"
                android:text="Old card info" />

            <ImageView
                android:id="@+id/iv_oldcardpic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/tv_oldcardinfo" />

            <TextView
                android:id="@+id/tv_oldcardcountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_oldcardinfo"
                android:layout_toEndOf="@+id/tv_personalnumber"
                android:text="Country"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />


            <TextView
                android:id="@+id/tv_oldcardauthority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_oldcardinfo"
                android:layout_marginStart="-121dp"
                android:layout_toEndOf="@+id/tv_type"
                android:text="Authority"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_oldcardnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_oldcardpic"
                android:layout_toEndOf="@+id/tv_phone"
                android:text="Number"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_oldcarddateofexpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dateofevent"
                android:layout_marginStart="-121dp"
                android:layout_toEndOf="@+id/tv_type"
                android:text="Date of expiry"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />


            <TextView
                android:id="@+id/tv_renewalreason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_newaddress"
                android:layout_alignEnd="@+id/tv_dateofbirth"
                android:text="Renewal reason"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_updateinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_oldcardpic"
                android:text="Update driver information" />

            <TextView
                android:id="@+id/tv_newaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_updateinfo"
                android:text="New address"
                android:textAlignment="center"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_newFirsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_newaddress"
                android:text="New first name"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_newLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_newFirsName"
                android:text="New last name"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_newselfieinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_newLastName"
                android:text="New selfie" />

            <ImageView
                android:id="@+id/iv_newselfie"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_newselfieinfo" />

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/iv_newselfie"
                android:text="Details"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_checkcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_details"
                android:text="Check code"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_paymentinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_details"
                android:layout_centerHorizontal="true"
                android:text="Paymant information"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/tv_signatureinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_paymentinfo"
                android:text="Signature" />

            <ImageView
                android:id="@+id/iv_signature"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/tv_signatureinfo" />

        </RelativeLayout>

    </ScrollView>

    </android.support.constraint.ConstraintLayout>
