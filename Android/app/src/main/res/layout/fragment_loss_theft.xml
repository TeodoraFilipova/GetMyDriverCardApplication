<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layout_place_of_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_place_of_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_of_event" />

        <EditText
            android:id="@+id/et_place_of_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/place_of_event"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_date_of_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_place_of_event"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_of_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_event" />

        <EditText
            android:id="@+id/et_date_of_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date_of_event"
            android:inputType="date" />
    </LinearLayout>


</RelativeLayout>