<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_cardappformid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application" />

        <TextView
            android:id="@+id/tv_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_cardappformid"
            android:text="@string/dots"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:id="@+id/tv_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_firstname"
            android:text="@string/dots"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:id="@+id/tv_personalnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_firstname"
            android:layout_below="@+id/tv_lastname"
            android:text="@string/dots"
            android:textColor="@color/md_blue_900" />


            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_personalnumber"
                android:text="@string/dots"
                android:textColor="@color/md_blue_900" />


        <TextView
            android:id="@+id/tv_dateofsubmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_firstname"
            android:layout_below="@id/tv_email"
            android:text="@string/dots"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_dateofsubmission"
            android:text="@string/dots"
            android:textAlignment="center"
            android:textColor="@color/md_blue_900" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>